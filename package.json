{
  "name": "ordered.online",
  "private": true,
  "keywords": [
    "lerna",
    "monorepo",
    "multi-package",
    "react-native",
    "yarn",
    "workspaces",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordered-online/apps"
  },
  "author": "Felix KÃ¤stner <hello@felix-kaestner.com>",
  "bugs": {
    "url": "https://github.com/ordered-online/apps/issues"
  },
  "homepage": "https://www.ordered.online",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "clean": "lerna run clean",
    "compile": "lerna run compile",
    "start": "lerna run start --parallel",
    "start:app": "lerna run --scope={@ordered.online/app,@ordered.online/components,@ordered.online/api} start --parallel",
    "start:manager": "lerna run --scope={@ordered.online/manager,@ordered.online/components,@ordered.online/api} start --parallel",
    "build": "lerna run build --parallel",
    "build:app": "lerna run --scope=@ordered.online/app build --stream",
    "build:manager": "lerna run --scope=@ordered.online/manager build --stream",
    "build:api": "lerna run --scope=@ordered.online/api build --stream",
    "build:components": "lerna run --scope=@ordered.online/components build --stream",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "changed": "lerna changed",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:develop": "jest -o --watch --changedSince=origin/master",
    "test:updateSnapshots": "jest -u"
  },
  "dependencies": {
    "expo": "^35.0.0",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-native": "https://github.com/expo/react-native/archive/sdk-35.0.0.tar.gz",
    "react-native-web": "^0.11.7",
    "expo-yarn-workspaces": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@expo/webpack-config": "^0.8.1",
    "babel-loader": "^8.0.6",
    "babel-preset-expo": "^7.1.0",
    "husky": "^3.0.9",
    "jest-expo": "^35.0.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest -u && git add packages/**/__tests__/__snapshots__"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "mem": "^4.0.0"
  },
  "version": "0.0.2"
}
